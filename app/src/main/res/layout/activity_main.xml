<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/but_scan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="32dp"
        android:text="SCAN"
        app:layout_constraintBottom_toTopOf="@+id/TV_RX"
        app:layout_constraintStart_toStartOf="@+id/ET_TX4" />

    <TextView
        android:id="@+id/tv_Name"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="16dp"
        android:text="NAME"
        app:layout_constraintBottom_toTopOf="@+id/tv_RSSI"
        app:layout_constraintEnd_toStartOf="@+id/tv_con"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="12dp"
        android:text="Connection"
        app:layout_constraintEnd_toStartOf="@+id/but_connect1"
        app:layout_constraintStart_toEndOf="@+id/tv_Name"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="49dp"
        android:text="Stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_RSSI"
        app:layout_constraintTop_toBottomOf="@+id/but_connect1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Characteristics UUID List:"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_MAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="10dp"
        android:text="MAC:"
        app:layout_constraintBottom_toTopOf="@+id/tv_UUID"
        app:layout_constraintEnd_toStartOf="@+id/tv_RSSI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Name" />

    <TextView
        android:id="@+id/tv_UUID"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="43dp"
        android:text="UUID:"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/tv_BATTERY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_RSSI" />

    <Button
        android:id="@+id/but_connect1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:text="Connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_con"
        app:layout_constraintTop_toTopOf="@+id/tv_con" />

    <EditText
        android:id="@+id/ET_TX3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/but_send"
        app:layout_constraintEnd_toStartOf="@+id/ET_TX4"
        app:layout_constraintStart_toEndOf="@+id/ET_TX1"
        app:layout_constraintTop_toBottomOf="@+id/tv_UUID" />

    <EditText
        android:id="@+id/ET_TX4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/ET_TX3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ET_TX3"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/ET_TX1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/ET_TX3"
        app:layout_constraintEnd_toStartOf="@+id/ET_TX3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Duration"
        app:layout_constraintBottom_toTopOf="@+id/ET_TX3"
        app:layout_constraintStart_toStartOf="@+id/ET_TX1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="71dp"
        android:layout_height="0dp"
        android:layout_marginStart="121dp"
        android:layout_marginEnd="121dp"
        android:text="White LED"
        app:layout_constraintBottom_toTopOf="@+id/ET_TX3"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/tv_UUID"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="103dp"
        android:text="Yellow LED"
        app:layout_constraintBottom_toBottomOf="@+id/but_scan2"
        app:layout_constraintEnd_toEndOf="@+id/ET_TX4"
        app:layout_constraintStart_toStartOf="@+id/ET_TX4"
        app:layout_constraintTop_toTopOf="@+id/but_stop" />

    <Button
        android:id="@+id/but_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="send"
        app:layout_constraintBottom_toTopOf="@+id/TV_RX"
        app:layout_constraintStart_toStartOf="@+id/ET_TX1" />

    <TextView
        android:id="@+id/tv_BATTERY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="129dp"
        android:text="BATTERY:"
        app:layout_constraintBottom_toTopOf="@+id/tv_UUID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_UUID"
        app:layout_constraintTop_toTopOf="@+id/tv_UUID" />

    <TextView
        android:id="@+id/tv_RSSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="55dp"
        android:text="RSSI:"
        app:layout_constraintEnd_toStartOf="@+id/but_stop"
        app:layout_constraintStart_toEndOf="@+id/tv_MAC"
        app:layout_constraintTop_toBottomOf="@+id/tv_con" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="22dp"
        android:text="Characteristics UUID List:"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="@+id/ELV1"
        app:layout_constraintEnd_toEndOf="@+id/TV_RX" />

    <TextView
        android:id="@+id/TV_RX"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Acknowledgement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ExpandableListView
        android:id="@+id/ELV1"
        android:layout_width="0dp"
        android:layout_height="252dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="2dp"
        android:background="#cacaca"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></ExpandableListView>

</androidx.constraintlayout.widget.ConstraintLayout>